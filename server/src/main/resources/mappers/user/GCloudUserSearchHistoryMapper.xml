<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.grazy.modules.user.mapper.GCloudUserSearchHistoryMapper">

    <resultMap id="BaseResultMap" type="com.grazy.modules.user.domain.GCloudUserSearchHistory">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="userId" column="user_id" jdbcType="BIGINT"/>
            <result property="searchContent" column="search_content" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,search_content,
        create_time,update_time
    </sql>


    <select id="selectUserSearchHistories" resultType="com.grazy.modules.user.vo.UserSearchHistoryVO">
        SELECT search_content AS `value`
        FROM g_cloud_user_search_history
        WHERE user_id = #{param.userId}
        ORDER BY update_time DESC LIMIT 10
    </select>
</mapper>
